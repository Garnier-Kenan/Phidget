<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.table_de_tri_fx.Controller">
   <children>
      <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/logo.png" />
         </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </ImageView>
      <Separator prefHeight="10.0" prefWidth="600.0" visible="false" />
      <Label fx:id="labelScann" text="Bonjour veuillez scanner votre carte pour vous connecter" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Inter Regular" size="70.0" />
         </font>
      </Label>
      <Separator prefHeight="10.0" prefWidth="600.0" visible="false" />
   </children>
</VBox>
